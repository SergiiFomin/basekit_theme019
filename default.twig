{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">
    <div class="global">
        <!--header-->
        <header>
            <div class="header">
                <div class="container">
                    <div class="row">
                        <article class="span12">
                            <div class="navigation">
                                <div class="row">
                                    <article class="span8">
                                        {{widget('extendednavigation', 'extendednavigation', {"align":"center"})|raw}}
                                    </article>
                                    <article class="span4">
                                        {{widget('profile', 'form', { 'profileType':'form'})|raw}}
                                    </article>
                                </div>
                            </div>

                            {{widget('logo', 'name', {"defaultlogo": asset('images/logo.png')})|raw}}
                            {{widget('companyname', 'companyname', {"business": "subcontractor"})|raw}}                            
                            {{widget('space', 'space', {'height': '20'})|raw}}
                            {{widget('image', 'image', { 'src': asset('images/content-img.jpg'), 'imageWidth': '1170px'})|raw}}
                            {{widget('space', 'space', {'height': '50'})|raw}}

                        </article>
                    </div>
                </div>
            </div>
        </header>
        <!--content-->
        <div class="container">
            <div class="row">
                <article class="span12">

                    {{zone('main')|raw}}

                </article>
            </div>
        </div>
        <!--footer-->
        <footer>
            <div class="container">
                <div class="row">
                    <section class="span12">
                        <div class="row">
                            <article class="span8">

                                {{widget('companyname', 'companyname', {"business": "subco"})|raw}}
                                {{widget('profile', 'copyright', { 'profileType':'copyright', 'copyright':'&copy Copyright 2013. All rights reserved'})|raw}}
                                {{widget('space', 'space', {'height': '30'})|raw}}

                            </article>
                            <article class="span4">

                                {{widget('socialicons', 'socialicons', {'googleplus': 'https://plus.google.com', 'linkedin':'http://www.linkedin.com', 'facebook': 'https://www.facebook.com', 'twitter': 'https://twitter.com', 'youtube': 'https://www.youtube.com', 'rss': '#'})|raw}}
                                {{widget('space', 'space', {'height': '30'})|raw}}

                            </article>
                        </div>
                    </section>
                </div>
            </div>
        </footer>
    </div>    
</div>

{% endblock %}